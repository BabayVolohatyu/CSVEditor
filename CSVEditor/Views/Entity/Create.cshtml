@model CSVEditor.Models.Entity

<h2>Create New Entity</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Date Of Birth:</label>
        <input asp-for="DateOfBirth" type="date" />
    </div>
    <div>
        <label>Married:</label>
        <input asp-for="Married" type="checkbox" />
    </div>
    <div>
        <label>Phone:</label>
        <input asp-for="Phone" />
    </div>
    <div>
        <label>Salary:</label>
        <input asp-for="Salary" type="number" step="0.01" />
    </div>
    <button type="submit">Create</button>
</form>

